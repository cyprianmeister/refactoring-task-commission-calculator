{
    "name": "app/commission-task",
    "description": "Commission calculator - calculates commissions for already made transactions",
    "type": "project",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "ext-bcmath": "*",
        "monolog/monolog": "^3.3",
        "symfony/cache": "^6.2",
        "symfony/config": "^6.2",
        "symfony/console": "6.2.*",
        "symfony/dependency-injection": "^6.2",
        "symfony/dotenv": "^6.2",
        "symfony/http-client": "^6.2",
        "symfony/process": "^6.2",
        "symfony/property-access": "^6.2",
        "symfony/serializer": "^6.2",
        "symfony/yaml": "^6.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "symfony/phpunit-bridge": "^6.2",
        "symfony/var-dumper": "^6.2",
        "vimeo/psalm": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test-ca-psalm": "bin/psalm",
        "test-ca-phpstan": "bin/phpstan",
        "test": ["@phpunit", "@test-cs", "@test-ca-psalm", "@test-ca-phpstan"],
        "copy-env": "cp .env.dist .env",
        "post-install-cmd": [
            "@copy-env"
        ]
    }
}
